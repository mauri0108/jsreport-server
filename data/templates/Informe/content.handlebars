<html>
  <head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
  </head>
  <body>
        <div>
            <table style="width : 100%" >
                <tr>
                    <td colspan="2" align="center">
                        <h1 >{{ infDetalle.nombre }}</h1>
                    </td>
                </tr>
                <tr>
                    <td align="center" style="font-size: 20px">
                        <h2>{{ institucion }}</h2>
                        <b>Medico:</b> {{ medico }}
                        <br><b>Paciente:</b> {{ paciente }}
                        <br><b>Fecha:</b> {{ creado }}
                    </td>
                    <td align="center">
                        <img src= {{ logo }} alt="img">
                    </td>
                </tr>
                {{#each infDetalle.items }}
                <tr>
                    <td colspan="2" align="center" style="font-size: 20px">
                        <h3 style="padding-top: 15px;" >{{ nombre }}</h3>
                        <div>
                            {{ concatDescription caracteristicas }}
                        </div>
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
    </body>
</html>